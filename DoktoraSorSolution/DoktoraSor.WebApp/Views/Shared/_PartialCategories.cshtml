@using DoktoraSor.BusinessLayer
@using DoktoraSor.Entities
@using DoktoraSor.WebApp.Models


@{ 
     
    List<Category> list = CacheHelper.GetCategoriesFromCache();

}





<h1 class="my-4">Kategoriler</h1>
<div class="list-group">
    <a href="/Home/Blog" class="list-group-item">
        <img src="~/Content/assets/media/icons/svg/Navigation/Angle-double-right.svg" /> Tümü
    </a>

    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item"><img src="~/Content/assets/media/icons/svg/Navigation/Angle-right.svg" />@cat.Title</a>
    }


</div>
