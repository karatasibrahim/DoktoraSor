@using DoktoraSor.WebApp
@model DoktoraSor.Entities.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_OperationLayoutPage.cshtml";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="col-md-10">
            <div class="kt-portlet">
                <form class="kt-form">
                    <div class="kt-portlet__body kt-portlet">
                        <div class="form-group form-group-last">
                            <div class="alert alert-secondary" role="alert">
                                <div class="alert-icon"><i class="flaticon-warning kt-font-brand"></i></div>
                                <div class="alert-text">
                                    Lütfen uygun paket adını ve varsa kupon kodunu giriniz.
                                </div>
                            </div>
                        </div>
                        @Html.ValidationSummary(false)
                        <div class="form-group">

                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CouponCode, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CouponCode, new { htmlAttributes = new { @class = "form-control" } })

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.IsCouponCode, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.IsCouponCode)

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="kt-portlet__foot">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @MyBootstrap.Button("success", "btn-sm", "submit", "plus-circle", " Kaydet", "Kayıt başarılı")
                                @MyBootstrap.LinkButton("/Products/Index/", "primary", "btn-sm", string.Empty, "arrow-left", "Geri")
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}