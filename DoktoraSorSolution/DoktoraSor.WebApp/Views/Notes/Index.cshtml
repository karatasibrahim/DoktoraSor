@using DoktoraSor.WebApp
@using DoktoraSor.WebApp.Models
@using DoktoraSor.Entities

@model IEnumerable<DoktoraSor.Entities.Note>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_OperationLayoutPage.cshtml";
}

@{
    DoctorUser duser = CurrentSession.UserDoctor;
     

}
<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head--lg">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="kt-font-brand flaticon2-line-chart"></i>
                    </span>
                    <h3 class="kt-portlet__head-title">
                        Sayfa Blog Yazıları
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-wrapper">
                        <div class="kt-portlet__head-actions">
                            <div class="dropdown dropdown-inline">
                                <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="la la-download"></i> Dışa Aktar
                                </button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <ul class="kt-nav">
                                        <li class="kt-nav__section kt-nav__section--first">
                                            <span class="kt-nav__section-text">Lütfen seçiniz</span>
                                        </li>
                                        <li class="kt-nav__item">
                                            <a href="#" class="kt-nav__link">
                                                <i class="kt-nav__link-icon la la-print"></i>
                                                <span class="kt-nav__link-text">Yazdır</span>
                                            </a>
                                        </li>
                                        <li class="kt-nav__item">
                                            <a href="#" class="kt-nav__link">
                                                <i class="kt-nav__link-icon la la-copy"></i>
                                                <span class="kt-nav__link-text">Kopyala</span>
                                            </a>
                                        </li>
                                        <li class="kt-nav__item">
                                            <a href="#" class="kt-nav__link">
                                                <i class="kt-nav__link-icon la la-file-excel-o"></i>
                                                <span class="kt-nav__link-text">Excel</span>
                                            </a>
                                        </li>
                                        <li class="kt-nav__item">
                                            <a href="#" class="kt-nav__link">
                                                <i class="kt-nav__link-icon la la-file-text-o"></i>
                                                <span class="kt-nav__link-text">CSV</span>
                                            </a>
                                        </li>
                                        <li class="kt-nav__item">
                                            <a href="#" class="kt-nav__link">
                                                <i class="kt-nav__link-icon la la-file-pdf-o"></i>
                                                <span class="kt-nav__link-text">PDF</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            &nbsp;
                            @MyBootstrap.LinkButton("/Notes/Create/" + string.Empty, "primary", "btn-sm", " Ekle", "plus-circle", " Ekle")

                        </div>
                    </div>
                </div>
            </div>

            <div class="kt-portlet__body">
                <!--begin: Datatable -->
                <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_2">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Category.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Text)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsDraft)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LikeCount)
                            </th>
                            <th>Eylem</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Text)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsDraft)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LikeCount)
                                </td>
                                <td width="250">
                                    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modal_comment" data-note-id="@item.Id">
                                        <i class="la la-comment"></i>
                                    </button>

                                    @MyBootstrap.LinkButton("/Notes/Edit/" + item.Id, "warning", "btn-sm", "Düzenle", "edit", string.Empty)
                                    @MyBootstrap.LinkButton("/Notes/Details/" + item.Id, "info", "btn-sm", "Detaylar", "search", string.Empty)@MyBootstrap.LinkButton("/Notes/Delete/" + item.Id, "danger", "btn-sm", "Sil", "trash", string.Empty)
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script src="~/Scripts/jquery-3.6.0.min.js"></script>
@MyBootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")

<script src="~/Scripts/comment.js"></script>
