@using DoktoraSor.Entities
@using DoktoraSor.WebApp.Models

@model List<Note>

@{
    DoctorUser duser = CurrentSession.UserDoctor;
    PatientUser puser = CurrentSession.UserPatient;


}

@{
    ViewBag.Title = "Blog";

    Layout = "~/Views/Shared/_BlogLayoutPage.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/assets/css/demo1/style.bundle.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<div class="container">

    <div class="row">

        <div class="col-lg-3">

            @Html.Partial("_PartialCategories")

        </div>


        <div class="col-lg-9">



            <div class="row">
                @foreach (Note note in Model)
                {

                    <div class="col-lg-4 col-md-6 mb-4" data-note-id="@note.Id">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="~/Content/assets/media/blog/blog5.jpg" alt="@note.Title"></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#modal_notedetail" data-note-id="@note.Id">@note.Title</a>
                                </h4>

                                @if (string.IsNullOrEmpty(note.Text) == false && note.Text.Length > 70)
                                {
                                    <p> @(note.Text.Substring(0, 70) + "...");</p>
                                    <p>
                                        <a href="#" data-bs-toggle="modal" data-bs-target="#modal_notedetail" data-note-id="@note.Id">devamı<i class="la la-play"></i></a>
                                    </p>

                                }
                                else
                                {
                                    <p> @note.Text</p>
                                }


                                <h6 class="text-right">
                                    <img src="~/Content/assets/media/icons/svg/General/User.svg" /> @note.DoctorOwner.Username <br />
                                    <img src="~/Content/assets/media/icons/svg/Home/Alarm-clock.svg" />@note.ModifiedOn.ToString("dd.MM.yy HH:mm")
                                </h6>
                            </div>
                            <div class="card-footer">

                                <button class="btn btn-xs btn-default text-xl-center" type="button" data-liked="false" data-note-id="@note.Id">
                                    <span class="la la-star-o like-star"></span>&nbsp;<span class="like-count">@note.LikeCount</span>
                                </button>
                                <p class="bx-pull-right">
                                    <button type="button" class="btn default btn-label-brand btn-sm" data-bs-toggle="modal" data-bs-target="#modal_comment" data-note-id="@note.Id">
                                        <span class="la la-comment"></span> @note.Comments.Count
                                    </button>
                                </p>

                            </div>
                        </div>
                    </div>
                }




            </div>


        </div>


    </div>


</div>

<link href="~/Content/assets/vendors/custom/vendors/line-awesome/css/line-awesome.css" rel="stylesheet" />

@MyBootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")
@MyBootstrap.ModalPopup(id: "modal_notedetail", title: "Blog Yazısı")
<script src="~/Scripts/comment.js"></script>
<script src="~/Scripts/like.js"></script> 
<script src="~/Scripts/NoteDetailPopup.js"></script>
 