@using DoktoraSor.WebApp
@model DoktoraSor.Entities.Sales

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_OperationLayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="col-md-10">
            <div class="kt-portlet">
                <form class="kt-form">
                    <div class="kt-portlet__body kt-portlet">
                        <div class="form-group form-group-last">
                            <div class="alert alert-danger" role="alert">
                                <div class="alert-icon"><i class="flaticon-warning kt-font-brand"></i></div>
                                <div class="alert-text">
                                    Satış Silme İşlemleri
                                </div>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.IsPay)
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.IsPay)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.PayCount)
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.PayCount)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.AccountBalance)
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.AccountBalance)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.MessageAndQuestionCount)
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.MessageAndQuestionCount)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.CreatedOn)
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.CreatedOn)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.ModifiedOn)
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.ModifiedOn)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.ModifiedUserName)
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.ModifiedUserName)
                                </div>
                            </div>
                            <div class="form-actions no-color">

                                @MyBootstrap.Button("danger", "btn-sm", "submit", "trash", " Sil", "Kategoriyi silmek istediğinizden emin misiniz?")
                                @MyBootstrap.LinkButton("/Sales/Index/", "primary", "btn-sm", string.Empty, "arrow-left", "Geri")

                            </div>


                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
