@helper Button(string color = "", string addtionalClass = "", string type = "button", string icon = "", string text = "", string onclick = "")
{<button type="@type" class="btn btn-@color @addtionalClass" onclick="return confirm('@onclick')"><i class="la la-@icon"></i>@text</button>}


@helper LinkMenu(string url = "", string icon = "", string text = "")
{<a href="@url" class="kt-menu__link kt-menu__toggle "><i class="kt-menu__link-icon la la-@icon"></i><span></span><span class="kt-menu__link-text"> @text </span></a>
}

@helper ModalPopup(string id = "myModal", string title = "Modal Title", bool showCloseButton = true)
{
    <div class="modal fade" id="@id" name="@id" tabindex="-1" role="dialog" aria-labelledby="@(id + "_label")">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" id="@(id + "_header")">
                    <h5 class="modal-title" id="@(id + "_label")">@title</h5>
                   
                </div>
                <div class="modal-body" id="@(id + "_body")">
                    <p>
                        
                    </p>
                </div>
                <div class="modal-footer" id="@(id + "_footer")">
                    @if (showCloseButton)
                    {
                        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                        }
                </div>
            </div>
        </div>
    </div>
  
}



